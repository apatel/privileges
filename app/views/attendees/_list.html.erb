<table>
  <tr>
    <th>First</th>
    <th>Last</th>
	<th>Email</th>
	<th>Actions</th>
  </tr>

<% attendees.each do |attendee| %>
  <tr>
    <td><%= attendee.firstname %></td>
    <td><%= attendee.lastname %></td>
    <td><%= attendee.email %></td>
	<td><%= link_to 'Edit', edit_attendee_path(attendee) %> | <%= link_to 'Destroy', attendee, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>